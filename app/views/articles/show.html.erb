<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Back", articles_path %></li>

    <%= form_with(model: @article, method: :delete, local: true, data: { confirm: "Are you sure you want to delete this article?" }) do |form| %>
  <div>
    <%= form.submit "Delete" %>
  </div>
<% end %>
</ul>
